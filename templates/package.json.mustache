{
    "name": "{{{packageScope}}}{{packageName}}",
    "version": "0.0.0",
    "description": "My package {{packageName}}",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest src",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!src/__mocks__/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/{{packageName}}",
    "license": "MIT",
    "devDependencies": {},
    "dependencies": {}
}
